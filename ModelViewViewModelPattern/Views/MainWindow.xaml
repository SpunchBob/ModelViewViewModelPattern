<Window x:Class="ModelViewViewModelPattern.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModelViewViewModelPattern.Views"
        xmlns:math="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        mc:Ignorable="d"
        Title="Linear Calculator" Height="360" Width="485" ResizeMode="NoResize">

    <Window.Resources>

        <Style x:Name="Label_Style" TargetType="Label">

            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="14"/>

        </Style>

        <Style x:Name="TextBox_Style" TargetType="TextBox">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="tb_border"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                >
                            <Grid>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost" 
                                    Focusable="False" 
                                    HorizontalScrollBarVisibility="Hidden" 
                                    VerticalScrollBarVisibility="Hidden"
                                    Margin="2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tb_border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

        <Style x:Name="Button_Style" TargetType="Button">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="button_border"
                                Background="WhiteSmoke"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                >
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="button_border" Property="Background" Value="#ffffff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="button_border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

        <Style x:Name="ListBox_Style" TargetType="ListBox">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="ListBox">
                        <Border
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ScrollViewer Margin="0"
                                          Focusable="false"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden">
                                <StackPanel Margin="2"
                                            IsItemsHost="True"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="214"/>
            <RowDefinition Height="106"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                Height="200"
                Margin="10,7,1,7"
                Background="WhiteSmoke"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="4" Grid.ColumnSpan="2"
                >

                <Grid x:Name="Inputs">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Label
                        Content="Координаты"
                        FontSize="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="38,0,0,0"
                    />

                    <Label
                        Grid.Row="1"
                        Content="X1:"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10, 0, 0, 0"
                    />

                    <TextBox
                        Grid.Row="1"
                        Text="{Binding x_1, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False}"
                        PreviewTextInput="TextBox_PreviewTextInput"
                        x:Name="x1_tb"
                        Width="380"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="42,0,0,0"
                    />

                    <Label
                        Grid.Row="2"
                        Content="Y1:"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10, 0, 0, 0"
                    />

                    <TextBox
                        Grid.Row="2"
                        Text="{Binding y_1, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False}"
                        PreviewTextInput="TextBox_PreviewTextInput"
                        x:Name="y1_tb"
                        Width="380"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="42,0,0,0"
                    />

                    <Label
                        Grid.Row="3"
                        Content="X2:"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10, 0, 0, 0"
                    />

                    <TextBox
                        Grid.Row="3"
                        Text="{Binding x_2, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False}"
                        PreviewTextInput="TextBox_PreviewTextInput"
                        x:Name="x2_tb"
                        Width="380"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="42,0,0,0"
                    />

                    <Label
                        Grid.Row="4"
                        Content="Y2:"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10, 0, 0, 0"
                    />

                    <TextBox
                        Grid.Row="4"
                        Text="{Binding y_2, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False}"
                        PreviewTextInput="TextBox_PreviewTextInput"
                        x:Name="y2_tb"
                        Width="380"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="42,0,0,0"
                    />

                    <Button
                        Command="{Binding CalculateCommand}"
                        Grid.Row="5"
                        Width="148"
                        Height="24"
                        Content="Создать"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                    />

                </Grid>

            </Border>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="WhiteSmoke"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="450"
                    Height="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,0,0,0">

                <Grid x:Name="Formula">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Content="Уравнение"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    <Border Grid.Row="1"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="4"
                            Width="410"
                            Height="60"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">

                        <math:FormulaControl x:Name="main_formula"
                                             Formula="{Binding FormulaText}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>

                    </Border>

                </Grid>

            </Border>

        </Grid>



    </Grid>
</Window>
